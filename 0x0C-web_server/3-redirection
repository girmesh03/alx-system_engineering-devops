#!/usr/bin/env bash
# Redirect a page permanently

# Install Nginx web server
apt-get update
apt-get install -y nginx
ufw allow 'Nginx HTTP'

echo "Hello World!" > /var/www/html/index.nginx-debian.html

# Replace the default Nginx configuration with our custom configuration
sed -i 's/server_name _;/server_name girmesh.tech;/' /etc/nginx/sites-available/default
sed -i '/server_name example.com;/a \
\
    location /redirect_me {\
        return 301 https://youtu.be/dQw4w9WgXcQ;\
    }' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo service nginx restart

