#!/usr/bin/env bash
# Redirect a page

REDIRECT="\n\tlocation /redirect_me {\n\t\treturn 301 https://youtube.com; \n\t}\n"
FILE="/etc/nginx/sites-available/default"

apt-get -y update
apt-get -y install nginx

ufw allow 'Nginx HTTP'

echo "Hello World!" > /var/www/html/index.html
sed -i "10i\ $REDIRECT" "$FILE"

# reload nginx
sudo /etc/init.d/nginx reload
