#!/usr/bin/env bash
# Redirect a page permanently

# Install nginx
apt-get update
apt-get -y install nginx
ufw allow 'Nginx HTTP'

echo "Hello World!" > /var/www/html/index.html

REDIRECT="\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/@EthioKnowledge; \n\t}\n"
sed -i "11i\ $REDIRECT" /etc/nginx/sites-enabled/default

service nginx restart

