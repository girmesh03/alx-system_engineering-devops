#!/usr/bin/env bash
# Redirect a page permanently

# get number of lines in file
file="/etc/nginx/sites-available/default"
num_lines=$(wc -l < "$file")

# Install nginx
sudo apt-get update
sudo apt-get install nginx -y
echo "Hello World!" > /var/www/html/index.html

# Create a redirection
redirect="\n\tlocation \/redirect_me {\n\t\treturn 301 https:\/\/www.youtube.com\/\@EthioKnowledge;\n\t}\n"
sudo sed -i "${num_lines}i\\${redirect}" $file

# restart nginx
sudo service nginx restart

